<h1>Edit Your Product</h1>
<p>
  <%= link_to "Back", @product %>
</p>

<%= form_for @product do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price_in_cents %><br>
    <%= f.number_field :price_in_cents %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>